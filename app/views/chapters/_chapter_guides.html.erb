<% if chapter.guides &&
      !chapter.guides.empty? %>
<div class="chapter-guide">
  Get guidance on this product area:
  <% chapter.guides.each do |guide| %>
    <% separator = chapter.guides.index(guide) < (chapter.guides.length - 1) ? ",&nbsp;".html_safe : "" %>
    <a href="<%= guide[:url] %>" class="chapter-guide-link"><%= guide[:title] %></a><%= separator %>
  <% end %>
</div>
<% end %>
<% if chapter && chapter.short_code %>
<div class="forum-link">
  <a href="https://forum.trade-tariff.service.gov.uk/c/classification/<%= chapter.short_code %>">Discuss this chapter in the forums</a>
</div>
<% end %>
