<% content_for :title, "#{@chapter} - Trade Tariff - GOV.UK" %>
<% content_for :head do %>
  <link rel='alternate' type='application/json' href='<%= chapter_url(@chapter, format: :json) %>' title='Chapter information page in JSON format' />
<% end %>

<article class="tariff">
  <div class="inner">
    <dl>
      <dt class="section-number">Section <%= @chapter.section_numeral %></dt>
      <dd class="section-title"><%= link_to @chapter.section, section_path(@chapter.section) %>
        <dl class="tariff-fragments">
          <dt class="chapter-code" title="Chapter code"><%= @chapter.short_code %></dt>
          <dd>
            <h1>
              <%= link_to  @chapter, chapter_path(@chapter) %>
              (<%= link_to 'changes', chapter_changes_path(@chapter, format: :atom), class: "feed" %>)
            </h1>
            <dl class="chapter-headings">
              <%= render @headings %>
            </dl>
          </dd>
        </dl>
      </dd>
    </dl>

    <%= render partial: 'sections/note', locals: { section_note: @chapter.section.section_note } %>

    <% if @chapter.chapter_note.present? %>
      <article class="chapter-notes">
        <h2>Chapter notes</h2>

        <%= govspeak(@chapter.chapter_note) %>
      </article>
    <% end %>
    </div>
</article>
