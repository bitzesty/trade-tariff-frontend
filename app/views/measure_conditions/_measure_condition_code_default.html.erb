<table class="small-table">
  <caption>
    <h5 class="heading-small"><%= condition_group[:condition] %></h5>
  </caption>
  <thead>
  <tr>
    <th>Document code</th>
    <th>Requirement</th>
    <th>Action</th>
    <th>Duty expression</th>
  </tr>
  </thead>
  <tbody>
  <% conditions.each do |condition| %>
    <tr>
      <td class="numerical"><%= condition.document_code %></td>
      <td>
        <%= condition.requirement.to_s.html_safe %>
      </td>
      <td><%= condition.action %></td>
      <td class="numerical">
        <%= condition.duty_expression.to_s.html_safe %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
