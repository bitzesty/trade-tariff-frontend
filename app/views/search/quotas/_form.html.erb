<%= form_tag quota_search_path, method: :get, class: "tariff-search quota-search #{@section_css}", id: 'new_search' do |f| %>
  <h1 class="govuk-heading-l">Search the Quotas</h1>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-quarter">
      <%= label_tag :goods_nomenclature_item_id, 'Commodity code', class: 'govuk-label' %>
    </div>
    <div class="column-three-quarters">
      <%= text_field_tag :goods_nomenclature_item_id, search_form.goods_nomenclature_item_id, class: "govuk-input govuk-!-width-one-quarter" %>
    </div>
  </div>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-quarter">
      <%= label_tag :geographical_area_id, 'Country', class: 'govuk-label' %>
    </div>
    <div class="column-three-quarters">
      <fieldset class="govuk-fieldset js-quota-country-picker">
        <%= select_tag :geographical_area_id, options_from_collection_for_select(Array.wrap(search_form.geographical_area), 'id', 'long_description', search_form.geographical_area_id), include_blank: 'All countries', class: 'js-quota-country-picker-select govuk-input govuk-input--width-50' %>
        <a class="reset-country-picker" href="#reset-country-picker" title="Reset country picker" rel="nofollow">Reset<span class="long-text">&nbsp;to all countries</span></a>
      </fieldset>
    </div>
  </div>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-quarter">
      <%= label_tag :order_number, 'Order number', class: 'govuk-label' %>
    </div>
    <div class="column-three-quarters">
      <%= text_field_tag :order_number, search_form.order_number, class: "govuk-input govuk-!-width-one-quarter" %>
    </div>
  </div>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-quarter">
      <%= label_tag :critical, 'Critical state', class: 'govuk-label' %>
    </div>
    <div class="column-three-quarters">
      <%= select_tag :critical, options_for_select(QuotaSearchForm::CRITICAL_VALUES, search_form.critical), include_blank: true, class: "govuk-input govuk-!-width-one-quarter" %>
    </div>
  </div>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-quarter">
      <%= label_tag :status, 'Status', class: 'govuk-label' %>
    </div>
    <div class="column-three-quarters">
      <%= select_tag :status, options_for_select(QuotaSearchForm::STATUS_VALUES, search_form.status), include_blank: true, class: "govuk-input govuk-!-width-one-quarter" %>
    </div>
  </div>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-quarter">
      <%= label_tag :years, 'Years', class: 'govuk-label' %>
    </div>
    <div class="column-three-quarters">
      <%= select_tag 'years[]', options_for_select(QuotaSearchForm::YEARS_VALUES, search_form.years.first), include_blank: true, class: "govuk-input govuk-!-width-one-quarter" %>
    </div>
  </div>
  <input class="button govuk-button" type="submit" name="new_search" value="Search">
<% end %>
