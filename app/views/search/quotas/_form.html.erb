<%= form_tag quota_search_path, method: :get, class: "tariff-search quota-search #{@section_css}", id: 'new_search' do |f| %>
  <h1 class="govuk-heading-l">Search the Quotas</h1>
  <div class="govuk-form-group">
    <%= label_tag :goods_nomenclature_item_id, 'Commodity code', class: 'govuk-label' %>
    <%= text_field_tag :goods_nomenclature_item_id, search_form.goods_nomenclature_item_id, class: "govuk-input govuk-input--width-10" %>
  </div>
  <div class="govuk-form-group">
    <%= label_tag :geographical_area_id, 'Country', class: 'govuk-label' %>
    <div class="js-quota-country-picker">
      <%= select_tag :geographical_area_id, options_from_collection_for_select(Array.wrap(search_form.geographical_area), 'id', 'long_description', search_form.geographical_area_id), include_blank: 'All countries', class: 'js-quota-country-picker-select custom-select' %>
      <div class="govuk-!-margin-top-3">
        <a class="reset-country-picker" href="#reset-country-picker" title="Reset country picker" rel="nofollow">Reset<span class="long-text">&nbsp;to all countries</span></a>
      </div>
    </div>
  </div>
  <div class="govuk-form-group">
    <%= label_tag :order_number, 'Order number', class: 'govuk-label' %>
    <%= text_field_tag :order_number, search_form.order_number, class: "govuk-input govuk-input--width-10" %>
  </div>
  <div class="govuk-form-group">
    <%= label_tag :critical, 'Critical state', class: 'govuk-label' %>
    <%= select_tag :critical, options_for_select(QuotaSearchForm::CRITICAL_VALUES, search_form.critical), include_blank: true, class: "custom-select" %>
  </div>
  <div class="govuk-form-group">
    <%= label_tag :status, 'Status', class: 'govuk-label' %>
    <%= select_tag :status, options_for_select(QuotaSearchForm::STATUS_VALUES, search_form.status), include_blank: true, class: "custom-select" %>
  </div>
  <div class="govuk-form-group">
    <%= label_tag :years, 'Years', class: 'govuk-label' %>
    <%= select_tag 'years[]', options_for_select(QuotaSearchForm::YEARS_VALUES, search_form.years.first), include_blank: true, class: "custom-select" %>
  </div>

  <input class="button govuk-button" type="submit" name="new_search" value="Search">
<% end %>
