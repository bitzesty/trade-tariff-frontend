<% content_for :head do %>
  <link rel='alternate' type='application/json' href='<%= sections_url(format: :json) %>' title='Section list in JSON format' />
<% end %>

<h2 class="heading-small">All sections</h2>

<section class="sections">
  <table class="tariff-table">
    <thead>
      <tr>
        <th scope="col">Section</th>
        <th scope="col">Chapters</th>
        <th scope="col">
          Section title
          <% if TradeTariffFrontend.download_pdf_enabled? %>
            <div class="download-pdf pull-right"><%= link_to 'Download', download_latest_pdf_url, rel: 'nofollow', target: '_blank' %></div>
          <% end %>
        </th>
      </tr>
    </thead>
    <tbody>
      <%= render @sections %>
    </tbody>
  </table>
</section>


