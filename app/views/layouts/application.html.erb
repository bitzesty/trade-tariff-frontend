<% content_for :content do %>
  <div id="wrapper" class="tariff service">
    <main id="content" role="main">
      <%= render 'shared/phase_banner' if ENV['NOTICE_BANNER'] %>
      <%= render 'shared/header' %>
      <%= yield %>
    <% if @tariff_last_updated %>
      <div id="last-updated-at" class="related-module font-xsmall">Last updated: <%= @tariff_last_updated.strftime("%e %B %Y") %>&emsp;<a href="https://www.gov.uk/government/collections/tariff-stop-press-notices" target="_blank">View latest amendments</a></div>
    <% end %>
    </main>
  </div>
<% end %>

<%= render :partial => 'layouts/base' %>
<%= render :file => 'layouts/govuk_template' %>
